generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Movie {
  id          Int       @id @default(autoincrement())
  title       String    @unique
  description String?
  image       String?
  releaseDate DateTime?
}

model Watchlist {
  id          Int       @id @default(autoincrement())
  title       String    @unique
  description String?
  image       String?
  releaseDate DateTime?
  watched     Boolean?
}

